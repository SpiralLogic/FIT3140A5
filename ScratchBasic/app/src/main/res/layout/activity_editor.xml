<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditorActivity">

    <ListView
        android:id="@+id/instruction_listView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="false"
        android:descendantFocusability="afterDescendants"
        android:layout_above="@+id/run_button"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/run_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/instruction_listView"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/instruction_listView"
        android:layout_gravity="center_horizontal"
        android:text="@string/run"
        android:layout_toEndOf="@+id/meta_info_button"
        android:layout_toRightOf="@+id/meta_info_button" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/back_button"
        android:layout_toEndOf="@+id/back_button" />


    <Button
        android:id="@+id/back_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/meta_info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meta"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/save_button"
        android:layout_toEndOf="@+id/save_button" />


</RelativeLayout>
